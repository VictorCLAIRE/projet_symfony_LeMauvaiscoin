{% extends 'base.html.twig' %}

{% block title %}Regions index{% endblock %}

{% block body %}
    <h1>Regions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name_region</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.id }}</td>
                <td>{{ region.nameRegion }}</td>
                <td>
                    <a class="btn btn-info m-1" href="{{ path('regions_show', {'id': region.id}) }}">show</a>
                    <a class="btn btn-info m-1" href="{{ path('regions_edit', {'id': region.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info m-1" href="{{ path('regions_new') }}">Create new</a>
{% endblock %}
